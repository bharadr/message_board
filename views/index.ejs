<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
      <% messages.forEach(function(message) { %>
        <li>
          <p><%= message.text %>: By <%= message.user %></p>
        </li>
      <% }); %>
    </ul>
    <a href="/new">Add a new message!</a>
  </body>
</html>
